<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:foregroundGravity="center|top"
        style="Theme.AppCompat.Light.DarkNoActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create An Account"
            android:id="@+id/textView"
            android:paddingTop="40dp"
            android:textColor="@color/dark_blue"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="to find lawers and quickly \nresolve issues"
            android:id="@+id/textView2"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="2dp"
            android:background="#3b5998"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewFB"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:src="@drawable/icon_facebook"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up With Facebook"
                android:id="@+id/signUpFB"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="#3b5998"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/activity_horizontal_margin"
                android:gravity="center|left" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:background="@color/googleOrange"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewGmailIcon"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:src="@android:drawable/ic_dialog_email"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/googleOrange" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text= "Sign Up With Gmail"
                android:id="@+id/signUpGmail"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:paddingLeft="5dp"
                android:background="@color/googleOrange"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/activity_horizontal_margin"
                android:gravity="center|left"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:background="@color/ColorPrimary"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:src="@android:drawable/ic_dialog_email"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text= "@string/emailSignUp"
                android:id="@+id/signUpEmail"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/ColorPrimary"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/activity_horizontal_margin"
                android:gravity="center|left"
                android:onClick="displayESignUpPopUP"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/privacyPolicyMessage"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Already a member?"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:id="@+id/alreadyAMember"
            android:textColor="@color/dark_blue"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/activity_horizontal_margin"
            android:onClick="alreadyAMemberOnClick" />
    </LinearLayout>
</RelativeLayout>